<!DOCTYPE html>
<html>
<head>
{% block head %}
	<meta http-equiv='Content-Type' content='text/html; charset=utf-8'>
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<meta name="description" content="Alternatieve studentenvereniging Karpe Noktem uit Nijmegen">
	<meta name="robots" content="INDEX, FOLLOW">
	<link rel="stylesheet" type="text/css" href="css/base.css">
	<link rel="icon" type="image/png" href="favicon.png">
	<title>{% if title is defined and title %}{{ title }} - {% endif %}Studentenvereniging Karpe Noktem</title>
	<script type="text/javascript" src="js/jquery.min.js"></script>
	<script type="text/javascript" src="js/jquery.cookie.js"></script>
	<script type="text/javascript" src="js/common.js"></script>
{% endblock head %}
</head>
<body>
	<div id="pageWrapper">
		<div id="header">
			{% from 'macros.twig' import header_link as header_link %}
			<div class="container">
				<div id="logo"><img id="collapser" src="img/up.png" onclick="collapseHeader(this);" /> {{ header_link(action, 'index', '<img src="img/logo.png" alt="Karpe Noktem" style="width: 310px;">') }}</div>
				<div id="navigator" class="container">
					<ul>
						<li>{{ header_link(action, 'agenda', 'agenda') }}</li>
						<li>{{ header_link(action, 'over', 'over') }}</li>
						<li><a href="https://www.karpenoktem.nl/fotos">foto's</a></li>
						<li>{{ header_link(action, 'lidworden', 'lid worden') }}</li>
						<li>{{ header_link(action, 'contact', 'contact') }}</li>
					</ul>
				</div>
			</div>
		</div>
		<div id="content">
			<div class="container">
{% block content %}
{% block overMenu %}
<div id="overMenu">
	<a href="over.html">Over Karpe Noktem</a>
	<a href="geschiedenis.html">Geschiedenis</a>
	<a href="activiteiten.html">Activiteiten</a>
	<a href="bestuur.html">Bestuur</a>
	<a href="aktanokturna.html">Akta Nokturna</a>
	<a href="zusjes.html">Zusjes</a>
	<a href="sponsoren.html">Sponsoren</a>
</div>
{% endblock overMenu %}
{% if title is defined and title %}
	<h1>{{ title|lower }}</h1>
{% endif %}
{% endblock content %}
			</div>
			<div id="footer">
				<div class="container">
{% block footer %}
					&copy; Alternatieve studentenvereniging <span style="font-family: Variex;">Karpe Noktem</span>
					<small><a id="scrollUp" href="#">Terug naar boven</a></small>
{% endblock footer %}
				</div>
			</div>
		</div>
	</div>
</body>
</html>
