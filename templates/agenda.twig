{% extends 'base.twig' %}

{% set title = 'Agenda' %}

{% block head %}
{{ parent() }}
    <link rel="stylesheet" type="text/css" href="css/agenda.css" />
{% endblock head %}

{% block overMenu %}
{% endblock overMenu %}

{% block content %}
{{ parent() }}

<div>
	<a href="http://www.google.com/calendar/embed?src=vssp95jliss0lpr768ec9spbd8%40group.calendar.google.com&amp;ctz=Europe/Paris" target="_blank">Ook op Google Calendar</a>.
	Ben je geen lid, maar wil je wel op de hoogte blijven van onze activiteiten?
	Zet jezelf op de ge√Ønteresseerden-e-maillijst: <form method="post" action="https://karpenoktem.nl/mailman/subscribe/geinteresseerden" style="display: inline;"><input name="email" type="text" placeholder="jouw@email.com" /><input type="submit" value="voeg toe" /></form>
</div>

<div id="agenda">
<ul id="fullagenda">

{% for item in agenda %}
	{% if not (last_month is defined and last_month == item.month) %}
		{% set last_month = item.month %}
	<li class="monthSeparator">{{ item.month }}</li>

	{% endif %}
	<li class="item" onclick="$(this).find('.description').toggleClass('preview');">
		<div class="item_wrapper">
			<div class="date">
		    {{ item.short_date|join('<br />') }}
			</div>
			<div class="item_content">
				<div class="titlebar">
					<span class="title">{{ item.title }}</span>
	{% if item.end_date %}
					<span class="datelong">{{ item.start_date }}&mdash;{{ item.end_date }}</span></div>
	{% endif %}
				<div class="description preview">
					{{ item.description }}
				</div>
			</div>
		</div>
		<div style="clear: both;"></div>
	</li>
{% endfor %}

</ul>
</div>

{% endblock content %}
